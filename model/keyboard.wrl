#VRML V2.0 utf8


DEF	touch TouchSensor {

}

Sound {
	source DEF sou AudioClip {
		loop FALSE
		url	"../sound/keyboard.mp3"
	}
}

Shape {
    geometry IndexedFaceSet {
        creaseAngle 0.785
        solid FALSE
        coord Coordinate {
            point [ 
                -1.5 0 1.74, #0
                0 0 -1.8, #1
                -1.5 0 -1.74, #2
                0 0 1.8, #3
                -1.5 0.11 1.74, #4
                -1.5 0.11 -1.74, #5
                0 0.07 -1.8, #6
                0 0.07 1.8, #7
            ]
        }
        coordIndex [
            0, 2, 1, 3, -1,
            0, 2, 5, 4, -1,
            1, 3, 7, 6, -1,
            4, 5, 6, 7, -1,
            0, 2, 4, 5, -1,
            1, 6, 5, 2, -1,
            3, 7, 4, 0, -1,
        ]
    }
    appearance Appearance {
        material Material {
            diffuseColor 1 1 1
        }

    }
}

DEF ListKeys Transform {
    translation 0.1 0 -0.95
    children [
        Transform {
            translation -1.4 0.1 2.5
            rotation 0 0 1 -0.04
            children [
                DEF Key Shape {
                    geometry Box {
                        size 0.1 0.04 0.1
                    }
                    appearance Appearance {
                        material Material {
                            diffuseColor 0.55 0.55 0.55
                        }
                    }
                }
            ]
        }

        DEF FourKeys Transform {
            translation 0 0 0
            children [
                Transform {
                    translation -1.4 0.1 2.25
                    rotation 0 0 1 -0.04
                    children [USE Key]
                }

                Transform {
                    translation -1.4 0.1 2.1
                    rotation 0 0 1 -0.04
                    scale 1 1 1
                    children [USE Key]
                }

                Transform {
                    translation -1.4 0.1 1.95
                    rotation 0 0 1 -0.04
                    scale 1 1 1
                    children [USE Key]
                }

                Transform {
                    translation -1.4 0.1 1.8
                    rotation 0 0 1 -0.04
                    scale 1 1 1
                    children [USE Key]
                }
            ]
        }

        Transform {
            translation 0 0 -0.6
            children [USE FourKeys]
        }

        Transform {
            translation 0 0 -1.2
            children [USE FourKeys]
        }

        Transform {
            translation 0 0 -1.8
            children [USE FourKeys]
        }

        Transform {
            translation 0 0 -2.4
            children [USE FourKeys]
        }
    ]
}

Transform {
    translation 0.25 0 0
    scale 1 0.95 1
    children [USE ListKeys]
}

Transform {
    translation 0.45 0 0
    scale 1 0.85 1
    children [USE ListKeys]
}

Transform {
    translation 0.65 0 0
    scale 1 0.85 1
    children [USE ListKeys]
}

Transform {
    translation 0.85 0 0
    scale 1 0.8 1
    children [USE ListKeys]
}

Transform {
    translation 1.05 0 0
    scale 1 0.75 1
    children [USE ListKeys]
}


ROUTE touch.touchTime TO sou.startTime