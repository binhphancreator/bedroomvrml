DEF clock TimeSensor {

	cycleInterval 8

	loop TRUE

	}
	DEF	 sfpath OrientationInterpolator{
		key	[
			0.0 0.5 1.0
		
		]
		keyValue [
			0 1 0 0
			0 1 0 3.14
			0 1 0 6.28
	  

		]
	}
]
}
